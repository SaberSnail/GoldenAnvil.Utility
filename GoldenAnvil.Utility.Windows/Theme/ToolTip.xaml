<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:markup="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:views="clr-namespace:GoldenAnvil.Utility.Views">

	<Style x:Key="TrimmedInPlaceToolTipStyle" TargetType="ToolTip" BasedOn="{StaticResource {markup:Type ToolTip}}">
		<Setter Property="Placement" Value="Relative" />
		<Setter Property="VerticalOffset" Value="-5" />
		<Setter Property="HorizontalOffset" Value="-7" />
		<Setter Property="Visibility" Value="{Binding PlacementTarget, RelativeSource={RelativeSource Self}, Converter={markup:Static views:TrimmedElementToVisibilityConverter.Instance}}" />
	</Style>

</ResourceDictionary>
